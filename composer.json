{
    "name": "epsoftware/twig-bridge",
    "description": "Adds the power of Twig to Laravel",
    "keywords": ["laravel","lumen", "twig"],
    "license": "MIT",
    "authors": [
        {
            "name": "Everton de Paula",
            "email": "everton_to@live.com"
        },
        {
            "name": "Rob Crowe",
            "email": "hello@vivalacrowe.com"
        },
        {
            "name": "Barry vd. Heuvel",
            "email": "barryvdh@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "twig/twig": "~1.15|~2.0",
        "illuminate/support": "5.0.*|5.1.*|5.2.*|5.3.*",
        "illuminate/view": "5.0.*|5.1.*|5.2.*|5.3.*"
    },
    "require-dev": {
        "laravel/framework": "5.0.*",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "squizlabs/php_codesniffer": "~1.5",
        "satooshi/php-coveralls": "~0.6"
    },
    "suggest": {
        "twig/extensions": "~1.0",
        "laravelcollective/html": "For bringing back html/form in Laravel 5.x"
    },
    "autoload": {
        "psr-4": {
            "TwigBridge\\": "src",
            "TwigBridge\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "master-dev"
        }
    },
    "minimum-stability": "dev"
}
